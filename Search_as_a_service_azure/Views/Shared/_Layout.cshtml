        <footer>
            <div style="float:left">
                <p>&copy; @DateTime.Now.Year - Saurabh.Tripathi</p>
            </div>

                <div style="float:right">
                    Please refere link to know more.
                    <p>
                        <a href="https://msdn.microsoft.com/en-in/library/azure/dn798927.aspx">Search Documents API</a> |
                        <a href="https://msdn.microsoft.com/en-in/library/azure/dn798921.aspx">Supported Sytax</a>
                    </p>
                </div>
</footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
